<%= turbo_stream_from current_user, 'notes' %>

<h4>List of notes</h4>

<%= link_to 'Add new note', new_note_path, data: { turbo_frame: dom_id(Note.new) } %>

<hr>

<%= turbo_frame_tag dom_id(Note.new) do %>
  <% if @notes.none? %>
    <%= render 'blank' %>
  <% end %>
<% end %>

<ul>
  <%= turbo_frame_tag 'notes' do %>
    <% @notes.each do |note| %>
      <%= render note %>
    <% end %>
  <% end %>
</ul>