<h4>List of notes</h4>
<%= turbo_frame_tag 'new_note_frame' do %>
  <%= link_to 'Add new note', new_note_path, data: { turbo_frame: 'list_notes_frame' } %>
<% end %>
<%= turbo_frame_tag 'list_notes_frame' do %>
  <ul>
    <% @notes.each do |note| %>
      <%= turbo_frame_tag dom_id(note) do %>
        <li>
          <%= note.text %>
          <%= link_to 'Open', note_path(note), data: { turbo_frame: '_top' } %>
          <%= link_to 'Edit', edit_note_path(note) %>
          <%= link_to 'Delete', note_path(note), data: { turbo_method: :delete } %>
        </li>
      <% end %>
    <% end %>
  </ul>
<% end %>